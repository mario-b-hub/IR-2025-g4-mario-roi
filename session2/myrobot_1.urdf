<?xml version="1.0"?>
<robot name="myrobot_1">
    <material name="base_link_yellow">
        <color rgba="1 0.984 0 1"/>
    </material>
    <material name="top_link_red">
        <color rgba="1 0 0 1"/>
    </material>
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
            <material name="base_link_yellow"/>
        </visual>
    </link>
    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0.025 0" rpy="1.57079632679 0 0"/>
            <material name="top_link_red"/>
        </visual>
    </link>
    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 -0.025 0" rpy="1.57079632679 0 0"/>
            <material name="top_link_red"/>
        </visual>
    </link>
    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
            <material name="top_link_red"/>
        </visual>
    </link>
    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="-0.15 0.2 0.1" rpy="0 0 0"/>
    </joint>
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="-0.15 -0.2 0.1" rpy="0 0 0"/>
    </joint>
    <joint name="base_caster_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.15 0 0.1" rpy="0 0 0"/>
    </joint>
</robot>