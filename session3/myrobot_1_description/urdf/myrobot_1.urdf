<?xml version="1.0"?>
<robot name="myrobot_1">
    <material name="base_link_yellow">
        <color rgba="1 0.984 0 1"/>
    </material>
    <material name="top_link_red">
        <color rgba="1 0 0 1"/>
    </material>
    <link name="base_footprint"/>
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="base_link_yellow"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <mass value="5" />
            <inertia ixx="0.083" ixy="0" ixz="0" iyy="0.167" iyz="0" izz="0.217" />
        </inertial>
    </link>
    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0.025 0" rpy="1.57079632679 0 0"/>
            <material name="top_link_red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0.025 0" rpy="1.57079632679 0 0"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.00271" ixy="0" ixz="0" iyy="0.00271" iyz="0" izz="0.005" />
        </inertial>
    </link>
    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 -0.025 0" rpy="1.57079632679 0 0"/>
            <material name="top_link_red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 -0.025 0" rpy="1.57079632679 0 0"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.00271" ixy="0" ixz="0" iyy="0.00271" iyz="0" izz="0.005" />
        </inertial>
    </link>
    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
            <material name="top_link_red"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 -0.05" rpy="0 0 0"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005" />
        </inertial>
    </link>
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.2" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>
    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="-0.15 0.2 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="-0.15 -0.2 -0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.15 0 -0.1" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>
    <gazebo reference="base_link">
        <material>Gazebo/Yellow</material>
    </gazebo>
    <gazebo reference="left_wheel_link">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="right_wheel_link">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="caster_wheel_link">
        <material>Gazebo/Red</material>
        <mu1 value="0.1" />
        <mu2 value="0.1" />
    </gazebo>
    <gazebo>
        <plugin name="diff_drive_controller"
            filename="libgazebo_ros_diff_drive.so">
            <!-- Update rate in Hz -->
            <update_rate>50</update_rate>
            <!-- wheels -->
            <left_joint>base_left_wheel_joint</left_joint>
            <right_joint>base_right_wheel_joint</right_joint>
            <!-- kinematics -->
            <wheel_separation>0.45</wheel_separation>
            <wheel_diameter>0.2</wheel_diameter>
            <!-- output -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>
            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_footprint</robot_base_frame>
        </plugin>
    </gazebo>
</robot>